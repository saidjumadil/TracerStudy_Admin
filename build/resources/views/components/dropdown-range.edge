<div class="form-group {{ form_class }}">
  <label for="{{ name }}">
    {{ label }}
    @if(required)
    <span class="text-danger">*</span>
    @endif
  </label>
  <select class="form-control" name="{{ name }}" id="{{ name }}" data-fv-not-empty='{{ (target) ? false : required }}'
    data-fv-not-empty___message='Pertanyaan ini wajib diisi' not-empty='{{required}}'>
    <option value="">-- pilihan anda --</option>

    @each(value in range(start,end ) )
    <option value="{{ value }}">{{ value }}</option>
    @endeach
  </select>
</div>
